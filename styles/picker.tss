".row": {
  hasChild: true
}

".input": {
  width: Ti.UI.FILL,

  // align up with textfields
  height: 40,

  color: "#999",
  font: {
    fontSize: 17
  }
}

".popover": {
  width: Ti.UI.SIZE,
  height: Ti.UI.SIZE
}

".view": {
  height: Ti.UI.SIZE,

  layout: 'vertical'
}

".cancel[platform=ios]": {
  systemButton: Ti.UI.iPhone.SystemButton.CANCEL
}

".done[platform=ios]": {
  systemButton: Ti.UI.iPhone.SystemButton.DONE
}